{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/generate-referral-code", "methods": ["POST"], "dest": "/server.js" },
    { "src": "/api/redeem-referral-code", "methods": ["POST"], "dest": "/server.js" },
    { "src": "/api/referral-metrics", "methods": ["GET"], "dest": "/server.js" }
  ]
}
